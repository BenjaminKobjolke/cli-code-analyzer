{
  "log_level": "all",
  "max_lines_per_file": {
    "enabled": true,
    "warning": 300,
    "error": 500,
    "exclude_patterns": ["venv/**", "__pycache__/**", "*.pyc", ".git/**"],
    "exceptions": [
      {"file": "example/**", "warning": 500, "error": 600}
    ]
  },
  "pmd_duplicates": {
    "enabled": true,
    "minimum_tokens": 100,
    "exclude_patterns": {
      "python": ["venv/**", "__pycache__/**", "*.pyc", ".git/**"]
    }
  },
  "ruff_analyze": {
    "enabled": true,
    "select": [
      "F",
      "E4", "E7", "E9",
      "W",
      "I",
      "B",
      "UP",
      "SIM",
      "C4",
      "PIE",
      "ARG",
      "RUF"
    ],
    "ignore": [],
    "exclude_patterns": ["venv", "__pycache__", ".git", ".venv", "node_modules", "build", "dist", "example"]
  }
}
